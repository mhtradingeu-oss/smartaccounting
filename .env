# =======================================
# SMARTACCOUNTING — DEVELOPMENT ENVIRONMENT
# =======================================

# Server
PORT=5000
NODE_ENV=development
HOST=localhost

# Frontend (Vite default port)
CLIENT_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# Database — SQLite
DATABASE_URL=sqlite:./database/smartaccounting.db

# JWT
JWT_SECRET=dev_jwt_secret_key_please_change_later_32chars
JWT_EXPIRES_IN=7d

# Email (disabled/test)
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_USER=test
EMAIL_PASS=test
EMAIL_FROM="SmartAccounting <no-reply@localhost>"

# Stripe (placeholders)
STRIPE_SECRET_KEY=sk_test_placeholder
STRIPE_WEBHOOK_SECRET=whsec_placeholder
STRIPE_PUBLISHABLE_KEY=pk_test_placeholder

# Uploads
MAX_FILE_SIZE=5000000
UPLOAD_PATH=uploads

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# API
API_VERSION=v1
API_BASE_URL=/api/v1

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# German Tax / ELSTER (placeholder)
ELSTER_ENDPOINT=https://elster-test-api.example.com
ELSTER_TEST_MODE=true

# OCR
OCR_SERVICE_URL=http://localhost:8000
OCR_API_KEY=test_ocr_key

# Cache (optional)
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600
