# =======================================
# SMARTACCOUNTING — DEVELOPMENT ENVIRONMENT
# =======================================

# ───────────────
# Server Settings
# ───────────────
PORT=5000
NODE_ENV=development
HOST=localhost

# ───────────────
# Frontend Access (Vite default port)
# ───────────────
CLIENT_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# ───────────────
# Database (SQLite for development + tests)
# ───────────────
DATABASE_URL=sqlite:./database/smartaccounting.db

# ───────────────
# Authentication
# ───────────────
JWT_SECRET=dev_jwt_secret_key_change_later_32chars_minimum
JWT_EXPIRES_IN=7d

# ───────────────
# Email (Local/Test Only)
# ───────────────
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_USER=test
EMAIL_PASS=test
EMAIL_FROM="SmartAccounting <no-reply@localhost>"

# ───────────────
# Stripe (Disabled in dev)
# ───────────────
STRIPE_SECRET_KEY=sk_test_disabled
STRIPE_WEBHOOK_SECRET=whsec_disabled
STRIPE_PUBLISHABLE_KEY=pk_test_disabled

# ───────────────
# File Uploads
# ───────────────
MAX_FILE_SIZE=5000000
UPLOAD_PATH=uploads

# ───────────────
# Security Settings
# ───────────────
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX=100

# ───────────────
# API
# ───────────────
API_VERSION=v1
API_BASE_URL=/api/v1

# ───────────────
# Logging
# ───────────────
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# ───────────────
# German Tax / ELSTER
# ───────────────
ELSTER_ENDPOINT=https://elster-sandbox.example
ELSTER_TEST_MODE=true

# ───────────────
# OCR Engine
# ───────────────
OCR_SERVICE_URL=http://localhost:8000
OCR_API_KEY=test_ocr_key

# ───────────────
# Cache (optional)
# ───────────────
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600
